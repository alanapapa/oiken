<%- include('partials/_head') -%> <%- include('partials/_nav') -%>

<section
  class="site-hero site-sm-hero overlay"
  style="background-image: url(/images/big_image_2.jpg); min-height: 350px"
>
  <div class="container">
    <div
      class="row align-items-center justify-content-center site-hero-sm-inner"
      style="min-height: 350px"
    >
      <div class="col-md-7 text-center">
        <div class="mb-5 element-animate">
          <h1 class="mb-2"><%= course.name %></h1>
          <p class="bcrumb">
            <a href="index">Home</a>
            <span class="sep ion-android-arrow-dropright px-2"></span>
            <a href="/courses">Courses</a>
            <span class="sep ion-android-arrow-dropright px-2"></span>
            <span class="current"> <%= course.name %> </span>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- END section -->

<div class="site-section bg-light element-animate">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-8 order-md-2 mb-5">

        <section class="episodes">
          <div class="container">
            <div class="row mb-5">
              <div class="col-md-12 pt-3">
                <h2><%= course.name %></h2>
                <p><%= course.description %></p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="col-lg-12 text-right">
              <% if (user && !(user.courses.includes(course._id))) { %>
              <form action="/courses/enroll" method="POST">
                <input
                  type="hidden"
                  name="course_id"
                  value="<%= course._id %>"
                />
                <button class="btn btn-primary reverse py-2 px-4" name="enroll">
                  ENROLL
                </button>
              </form>
              <% } else if(user && (user.courses.includes(course._id))) { %>
              <form action="/courses/leave" method="POST">
                <input
                  type="hidden"
                  name="course_id"
                  value="<%= course._id %>"
                />
                <button class="btn btn-primary btn-danger reverse py-2 px-4">
                  LEAVE COURSE
                </button>
              </form>
              <% } %>
            </div>

            


            
            <% if (user) { %>

            

            <% if( user && (user.courses.includes(course._id)) || course.author._id == user._id ) { %>
            <!-- <div class="row">
              <div class="col-md-12 mb-2">
                <h2 id="lesson">Lesson</h2>
              </div>
            </div> -->


              <!-- COURSE MODULES -->
      
      
              <div class="col-md-12 mb-2" style="padding-top: 80px;">
              <% for (let i = 0; i < course.module.length; i++) { %>
              <section class="episodes modal" id="updateCourse<%= coursee.module[i]._id %>" tabindex="-1">
                <%- course.module[i].cont %>
              </section>
              <% } %>
            </div>
                      
              <% } %>
              <% } else { %>
                <h1>In order to take the course you need to <a href="/login">log in</a></h1>
                <% } %>

                <% if( user && (!user.courses.includes(course._id)) || course.author._id == user._id ) { %>
                  <div class="col-md-12 mb-2" style="padding-top: 80px;">
                  <h1>In order to view the content of the course you need to enroll</h1>
                  </div>
                  <% } %>
              
          </div>
        </section>
      </div>
      <!-- END content -->

      <div class="col-md-6 col-lg-4 order-md-1">



        <div class="block-28 text-center mb-5">
          <figure>
            <img src="<%= course.image != null && course.image || '/images/img_1.jpg' %>" alt="" class="img-fluid" />
          </figure>
          <h2 class="heading"><%= course.author.username %></h2>
          <h3 class="subheading">Course Author</h3>
          <div class="tab-pane active" id="Login">
              <div class="form-group">
                <div class="col-sm-12">
                  <%= course.name %>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  
                  <%= course.description %>"
                </div>
              </div>
           
          </div>
        </div>





        <div class="block-29 mb-5 episodes">
          <h3>Course Modules</h3>
          <% for (let i = 0; i < coursee.module.length; i++ ) { %>

          <div class="row align-items-center p-4 episode">
            <div class="col-md-10">
              <h5>

                <button type="menu" class="btn btn-primary rounded-0 text-white col-12"
												data-toggle="modal" onclick="" data-target="#updateCourse<%= coursee.module[i]._id %>"
												><span><%= coursee.module[i].title %></span></button>
              </h5>
            </div>
            <div class="col-md-2 text-center">
              <a class="play"><span class="ion-ios-paper"></span
              ></a>
            </div>
          </div>

          <% } %>
        </div>

        
      </div>


      
      

       
      </div>
      <!-- END Sidebar -->
    </div>
  </div>
</div>

<%- include('partials/_subscribe') -%> <%- include('partials/_footer') -%>
