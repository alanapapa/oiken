      <div class="col-md-6 col-lg-4 order-md-1">
        <div class="block-29 mb-5">
          <h2 class="heading">Course Details</h2>
          <ul>
            <li>
              <span class="text-1">Duration:</span>
              <span class="text-2">
                <%= course.details.duration.quantity %> <%=
                course.details.duration.period %>
              </span>
            </li>
